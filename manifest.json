{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "version": "1.0.0",
  "description": "__MSG_extDescription__",
  "default_locale": "en",
  "permissions": [],
  "host_permissions": [
    "https://x.com/*",
    "https://twitter.com/*"
